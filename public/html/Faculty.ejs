        <h2>Faculty</h2>
    
    <% for (let i=0; i < user.length; i++) { %>
        <div class="container">
            <div class="row row-cols-2 row-cols-md-2 g-0" style="margin-top: 30px; margin-left: 200px">
                <div class="card" style="
            border-bottom-right-radius: 0%;
            border-top-right-radius: 0%;
            width: 350px;
            background-color: lightblue;
          ">
                    <div class="card-body">
                        <h3 class="card-title">
                            <%= user[i].name %>
                        </h3>
                        <p class="card-text">
                            <%= user[i].Post %>
                                <br />
                                <%= user[i].Collegename %>
                        </p>
                    </div>

                    <img src="../img/final1.PNG" class="card-img-top" alt="Profile Pic" style="
              width: 300px;
              align-self: center;
              margin-bottom: 30px;
              border-radius: 20px;
            " />
                </div>
                <div class="card" style="
            border-bottom-left-radius: 0%;
            border-top-left-radius: 0%;
            background-color: lightcyan;
          ">
                    <div class="card-body">
                        <p class="card-text">
                            <strong>
                                <h5> Address:</h5>
                            </strong>
                            <%= user[i].address %>
                        </p>
                        <p class="card-text">
                            <strong>
                                <h5>Area of interest:</h5>
                            </strong>
                        <ol>
                            <li>
                                <%= user[i].Interests1 %>
                            </li>
                            <li>
                                <%= user[i].Interests2 %>
                            </li>
                            <li>
                                <%= user[i].Interests3 %>
                            </li>
                        </ol>
                        </p>
                        <p class="card-text">
                            <strong>
                                <h5>Contact me:</h5>
                            </strong>
                        <p>
                            <strong> Office Contact Number: </strong>
                            <%= user[i].office_number %>
                                <br>
                                <strong> Personal Contact Number: </strong>
                                <%= user[i].phone_number %>
                        </p>
                        <p>
                            <strong> Office Email Address: </strong>
                            <%= user[i].College_email %>
                                <br>
                                <strong> Personal Email Number: </strong>
                                <%= user[i].Personal_email %>
                        </p>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

